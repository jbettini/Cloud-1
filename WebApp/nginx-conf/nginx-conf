server {
    listen 80;
    listen [::]:80;
    server_name cloud-one42project.duckdns.org www.cloud-one42project.duckdns.org;

    # Redirection vers HTTPS (à activer une fois que vous avez configuré SSL)
    # return 301 https://$server_name$request_uri;

    root /var/www/html;
    index index.php index.html index.htm;

    # Configuration pour Let's Encrypt
    location ~ /.well-known/acme-challenge {
        allow all;
        root /var/www/html;
    }

    # Configuration pour WordPress
    location / {
        try_files $uri $uri/ /index.php$is_args$args;
    }

    # Configuration pour phpMyAdmin
    location /phpmyadmin {
        proxy_pass http://phpmyadmin;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Configuration PHP pour WordPress
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass wordpress:9000;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
    }

    # Sécurité et optimisation
    location ~ /\.ht {
        deny all;
    }

    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }

    location = /robots.txt {
        log_not_found off;
        access_log off;
        allow all;
    }

    location ~* \.(css|gif|ico|jpeg|jpg|js|png)$ {
        expires max;
        log_not_found off;
    }
}

